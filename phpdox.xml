<?xml version="1.0" encoding="utf-8" ?>
<phpdox xmlns="http://xml.phpdox.net/config" silent="false">

    <project name="VGirol/JsonApi-Assert" source="${basedir}/src" workdir="${basedir}/build/phpdox/xml">

        <collector publiconly="false" backend="parser" />

        <generator output="${basedir}/docs/api">

            <enrich base="${basedir}/build">
                <source type="build" />
                <source type="git">
                    <history enabled="true" limit="15" />
                </source>
                <!-- <source type="checkstyle" /> -->
                <!-- alternative checkstyler to support phpcs xml output -->
                <source type="phpcs">
                    <file name="phpcs/phpcs.xml" />
                </source>
                <source type="pmd">
                    <file name="phpmd/phpmd_src.xml" />
                </source>
                <source type="phploc">
                    <file name="phploc/phploc.xml" />
                </source>
                <source type="phpunit">
                    <coverage path="coverage/coverage-xml" />
                </source>
            </enrich>

            <build engine="html" enabled="true" output="html">
                <template dir="${phpDox.home}/templates/html" />
                <file extension="xhtml" />
            </build>

            <!-- <build engine="xml" enabled="true" output="xml" /> -->

        </generator>
    </project>

</phpdox>
